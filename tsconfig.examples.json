{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["node"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@jambudipa.io/spider": ["./src/index.ts"]
    }
  },
  "include": [
    "examples/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/test"
  ]
}
